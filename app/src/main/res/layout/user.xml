<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#d8e0e8">

    <com.map.mymap.ui.StatusBarHeightView
        android:id="@+id/barview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        app:use_type="use_padding_top"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/back_to_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/backText"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="@dimen/standard_mergin"
            android:clickable="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/standard_mergin"
            android:layout_marginTop="20dp"
            android:text="欢迎使用MyMap"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <View
            android:layout_width="200dp"
            android:layout_height="10dp"
            android:layout_margin="@dimen/standard_mergin"
            android:background="@color/color666" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t"
        android:orientation="vertical">
        <Button
            android:id="@+id/returnback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="36dp"
            android:background="@drawable/shape"
            android:onClick="back_to_login"
            android:text="重新登录"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:text="修改密码"
            android:id="@+id/login_text_change_pwd"
            android:layout_below="@+id/textView"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:textSize="15dp" />
    </LinearLayout>
</RelativeLayout>
